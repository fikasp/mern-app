{
  "name": "mern-app",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "prod": "npm run build --prefix client",
    "client": "npm run dev --prefix client",
    "server": "npm run dev --prefix server",
